{
  "name": "Morph Light",
  "type": "light",
  "colors": {
    "editor.background": "#ffffff",
    "editor.foreground": "#333333"
  },
  "tokenColors": [
    {
      "name": "Comments",
      "scope": ["comment", "punctuation.definition.comment"],
      "settings": {
        "foreground": "#008000"
      }
    },
    {
      "name": "Variables",
      "scope": ["variable", "string constant.other.placeholder"],
      "settings": {
        "foreground": "#001080"
      }
    },
    {
      "name": "Placeholder Data",
      "scope": "variable.other.data.morph",
      "settings": {
        "foreground": "#0066CC",
        "fontStyle": "bold"
      }
    },
    {
      "name": "Placeholder Action",
      "scope": "variable.other.action.morph",
      "settings": {
        "foreground": "#9900CC",
        "fontStyle": "italic"
      }
    },
    {
      "name": "Placeholder Name",
      "scope": "variable.other.name.morph",
      "settings": {
        "foreground": "#008800",
        "fontStyle": "underline"
      }
    },
    {
      "name": "Placeholder Separators",
      "scope": "punctuation.separator.placeholder.morph",
      "settings": {
        "foreground": "#996600",
        "fontStyle": "bold"
      }
    },
    {
      "name": "Placeholder Braces",
      "scope": [
        "meta.placeholder.morph punctuation.definition.placeholder.begin",
        "meta.placeholder.morph punctuation.definition.placeholder.end"
      ],
      "settings": {
        "foreground": "#CC0000",
        "fontStyle": "bold"
      }
    },
    {
      "name": "JavaScript Functions",
      "scope": ["entity.name.function.js", "support.function"],
      "settings": {
        "foreground": "#795E26"
      }
    },
    {
      "name": "JavaScript Variables",
      "scope": ["variable.other.readwrite.js", "variable.other.object.js"],
      "settings": {
        "foreground": "#001080"
      }
    },
    {
      "name": "CSS Selectors",
      "scope": [
        "entity.name.tag.css",
        "entity.other.attribute-name.class.css",
        "entity.other.attribute-name.id.css"
      ],
      "settings": {
        "foreground": "#800000"
      }
    },
    {
      "name": "CSS Properties",
      "scope": [
        "support.type.property-name.css",
        "support.constant.property-value.css"
      ],
      "settings": {
        "foreground": "#001080"
      }
    },
    {
      "name": "JSON Keys",
      "scope": ["support.type.property-name.json"],
      "settings": {
        "foreground": "#001080"
      }
    },
    {
      "name": "JSON Values",
      "scope": ["support.constant.json"],
      "settings": {
        "foreground": "#A31515"
      }
    },
    {
      "name": "HTML Tags",
      "scope": ["entity.name.tag.html", "entity.name.tag.xml"],
      "settings": {
        "foreground": "#0000FF"
      }
    },
    {
      "name": "HTML Attributes",
      "scope": [
        "entity.other.attribute-name.html",
        "entity.other.attribute-name.xml"
      ],
      "settings": {
        "foreground": "#0451A5"
      }
    }
  ]
}
