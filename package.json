{
  "name": "morph-template-syntax-highlighting",
  "displayName": "Morph Template Syntax Highlighting",
  "description": "Syntax highlighting for .morph template files with light/dark theme variants, placeholder detection and section highlighting",
  "version": "0.0.5",
  "publisher": "peternaydenov",
  "engines": {
    "vscode": "^1.106.1"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:morph"
  ],
  "contributes": {
    "languages": [
      {
        "id": "morph",
        "aliases": [
          "Morph",
          "morph"
        ],
        "extensions": [
          ".morph"
        ],
        "configuration": "./src/language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "morph",
        "scopeName": "source.morph",
        "path": "./src/syntaxes/morph.tmLanguage.json"
      }
    ],
    "themes": [
      {
        "label": "Morph Light",
        "uiTheme": "vs",
        "type": "light",
        "path": "./src/themes/morph-light.json"
      },
      {
        "label": "Morph Dark",
        "uiTheme": "vs-dark",
        "type": "dark",
        "path": "./src/themes/morph-dark.json"
      }
    ],
    "commands": [
      {
        "command": "morph.helloWorld",
        "title": "Hello World"
      }
    ]
  },
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "test:contrast": "node scripts/check-contrast.js",
    "test:accessibility": "lhci autorun --config=.lighthouserc.js",
    "validate:theme": "npm run test:contrast"
  },
  "icon": "morph.syntax.highlight.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/PeterNaydenov/morph-extension-for-vscode.git"
  },
  "devDependencies": {
    "@lhci/cli": "^0.15.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.10.1",
    "@types/vscode": "^1.106.1",
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.48.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.7.1",
    "color-contrast-checker": "^2.1.0",
    "contrast-ratio": "^1.1.0",
    "eslint": "^9.39.1",
    "mocha": "^11.7.5",
    "prettier": "^3.7.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.0",
    "vscode-tmgrammar-test": "^0.1.3"
  }
}
